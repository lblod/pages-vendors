<AuApp>
  <AuBodyContainer
    @scroll={{true}}>
    <div class="au-d-component-block au-d-component-block--overflow">
      <AuToolbar
        @reverse={{false}}
        @border="bottom"
        @skin="tint"
        @size="large"
        @nowrap={{true}}>
        <AuLink
          @route="index"
          @skin="primary"
          @icon="chevron-left"
          @iconAlignment="left">
          Terug naar overzicht
        </AuLink>
      </AuToolbar>

      <AuContent
        class="au-u-margin-top au-u-margin-bottom center-children-centered padded-children-centered au-u-max-width-medium"
        @skin="default">
        {{outlet}}
      </AuContent>

      <AuToolbar
        @reverse={{false}}
        @border="top"
        @skin="tint"
        @size="large"
        @nowrap={{true}}>
        <AuLink
          @route="index"
          @skin="primary"
          @icon="chevron-left"
          @iconAlignment="left">
          Terug naar overzicht
        </AuLink>
      </AuToolbar>

      <section class="au-u-background-gray-100">
        <div class="au-u-max-width-large center-children-centered padded-children-centered">
          <AuHeading
            @level="2"
            @skin="2">
            Beschikbare documentatie
          </AuHeading>
          <Menu @fullSize={{false}} />
        </div>
      </section>

      <Footer />

    </div>
  </AuBodyContainer>
</AuApp>
